<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners android:radius="4dp"/>
            <!-- Shadow effect -->
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="2dp" />
            <gradient
                android:startColor="#E0E0E0"
            android:endColor="#B0B0B0"
            android:angle="270"/>
        </shape>
    </item>
</selector>

